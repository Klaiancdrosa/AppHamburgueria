<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backback"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="40dp"
        android:background="@drawable/caixa_de_fundo"
        android:backgroundTint="@color/light_yellow"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edtUsuarioC"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:ems="3"
            android:hint="Username"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="97dp"
            android:background="@color/white"
            android:ems="3"
            android:hint="Nome"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="238dp"
            android:background="@color/white"
            android:ems="3"
            android:hint="Email"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="168dp"
            android:background="@color/white"
            android:ems="3"
            android:hint="Password"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="305dp"
            android:background="@color/white"
            android:ems="3"
            android:hint="Telefone"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/username" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="96dp"
            app:srcCompat="@drawable/usernamen" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="165dp"
            app:srcCompat="@drawable/password" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="225dp"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="300dp"
            app:srcCompat="@drawable/telefonen" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alatsi"
        android:text="Cadastrar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="43dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/alatsi"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:background="@color/oranged"
        android:text="Cadastrar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
